<%= form_with(model: [@event, subscription]) do |f| %>
  
  <%= render 'partials/form_errors', model: subscription %>

  <% unless user_signed_in? %>
    <div class="mt-2">
      <%= f.label :user_name %>
      <%= f.text_field :user_name, class: 'form-control' %>
    </div>

    <div class="mt-2">
      <%= f.label :user_email %>
      <%= f.text_field :user_email, class: 'form-control' %>
    </div>
  <% end %>

  <div class="mt-2">
    <%= f.submit 'Подписаться', class: 'btn btn-primary' %>
  </div>
<% end %>
