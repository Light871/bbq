<%= form_with(model: [@event, photo], html: { multipart: true }) do |f| %>
  
  <%= render 'partials/form_errors', model: photo %>

  <div class="mt-2">
    <%= f.label :photo %>
    <%= f.file_field :photo, class: 'form-control' %>
  </div>

  <div class="mt-2">
    <%= f.submit 'Загрузить', class: 'btn btn-primary' %>
  </div>
<% end %>
